@import 'settings'

.browser-container
  display flex
  flex-flow row wrap
  justify-content flex-start

.browser
  display flex
  flex-direction column
  flex 0 0 32%
  min-width 300px
  padding 10px
  margin-bottom 10px

.browser-name
  font-size 1.5rem
  font-weight bold
  text-align center

.browser-details
  flex 1
  margin 1rem 0
  .column-container:not(:last-child)
    border-bottom 1px solid #BFBFBF

.browser-icon
  height 100px
  display flex
  align-items center
  justify-content center
  img
    max-height 80%
    max-width 80%

